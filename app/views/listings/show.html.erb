<div class="container">
  <div class="row">
    <div class="col-md-8">

		<h1>Listing: <%= @listing.name %></h1>

		<%= image_tag @listing.picture[0].url if @listing.picture? %>

		<p>
		  <strong>Name:</strong>
		  <%= @listing.name %>
		</p>
		<p>
		  <strong>Description:</strong>
		  <%= @listing.body %>
		</p>
		<p>
		  <strong>Start Date:</strong>
		  <%= @listing.start %>
		</p>
		<p>
		  <strong>End Date:</strong>
		  <%= @listing.end %>
		</p>
		<p>
		  <strong>Price:</strong>
		  <%= @listing.price %>
		</p>
		<p>
		  <strong>Room type:</strong>
		  <%= @listing.room_type %>
		</p>
		<p>
		  <strong>Number of guests:</strong>
		  <%= @listing.num_of_guest %>
		</p>


		<% @listing.tags.any? %>
		<% @listing.tags.each do |tag| %>
		<%= tag %>
		<% end %>

		<%= link_to 'Book NOW', new_listing_booking_path(@listing) %>
		<br>

		<%= link_to 'Edit', edit_listing_path(@listing) %> | 
		<%= link_to 'Back', listings_path %> 

	</div> 	<!-- col-md-8 -->


    <div class="col-md-4">
    	<h1>User Details</h1>

    	<p>
		  <strong>Name:</strong>
		  <%= @user.id %>
		</p>
		<p>
		  <strong>Description:</strong>
		  <%= @user.first_name %>
		</p>
		<p>
		  <strong>Start Date:</strong>
		  <%= @user.email %>
		</p>

    </div> <!-- col-md-4 -->
  </div>  
</div>