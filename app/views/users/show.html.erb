<div class="container">
	<div class="row">

		<div class="col-md-3">
		  <h1><strong> <%= @user.first_name%> <%=@user.last_name%></strong></h1>
			<p><strong>Email:</strong> <%=@user.email%></p>
			<p><strong>Phone:</strong> <%=@user.phone%></p>
			<p><strong>Born:</strong> <%= @user.birthday%></p>
			<p><strong>About me</strong></p><p> <%= @user.about %></p>
			<%= link_to 'Edit', edit_user_path(@user) %>
		</div> <!-- col-md-6 -->

		<div class="col-md-3">
			<br>
			<%= image_tag @user.picture.thumb.url, :class => 'img-thumbnail' if @user.picture?%>
		</div>

		<div class="col-md-3">
			<h3>Your Booking</h3>
			<% if @user.bookings.count > 0 %>
				<%@user.bookings.each do |book| %>
					<a href="/bookings/<%=book.id%>"><%=book.listing.name%></a><br>
				<%end%>
			<%else%>
				<p>You don't have any bookings yet. <%=button_to "Book now", listings_path, method: :get, class: "btn btn-danger"%>.</p>
			<%end%>
		</div> 	<!-- col-md-3 -->

		<div class="col-md-3">
			<h3>Your Listings</h3>
			<% if @user.listings.count > 0 %>
				<% @user.listings.each do |list| %>
				<a href="/listings/<%=list.id%>"><%=list.name%></a></br>
				<%end%>
			<%else%>
				<p>You don't have any listings yet. <%=button_to "Add now", new_listing_path, method: :get, class: "btn btn-danger"%>.</p>
			<%end%>
		</div> 	<!-- col-md-3 -->

	</div>
</div>

